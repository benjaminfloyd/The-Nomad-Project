<div id="post-hero-background">
    <div class="row translucent-form-overlay" align="center">
        <%= form_for @post, as: :post, url: city_posts_path(@city) do |f| %>
        <form>
                <div class="columns">
                    <label rows="4"> 
                        <%= f.text_area( :title, cols: 20, rows: 1)%>
                        <%= f.text_area( :post, cols: 20, rows: 20)%>
                        <%= f.text_field :img%>
                        <%= f.submit%>
                </div>
            </div>
        </form>
        <% end %>
    </div>
</div>


<style media="screen">
  #post-hero-background { background-image: url(<%= @city.image %>); }
</style>